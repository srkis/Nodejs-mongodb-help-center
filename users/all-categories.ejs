        $("#closeModal").click(function(e){
            $('#catName').val('');
            $('#catDescription  ').val('');
        });

        $("#addCategory").attr('disabled',true);
        $('#catName').keyup(function(){
            if($(this).val().length !=0)
                $("#addCategory").attr('disabled', false);
            else
                $("#addCategory").attr('disabled',true);
        })

        $('#catDescription').keyup(function(){
            if($(this).val().length !=0)
                $("#addCategory").attr('disabled', false);
            else
                $("#addCategory").attr('disabled',true);
        })


        $("#addCategory").click(function(e){

            let catDescription = $("#catDescription").val().trim();
            let catName = $("#catName").val().trim();

            if(catName == ''){
                $("#catName").css("border"," 1px solid red");
                $('#addCategory').removeAttr("data-dismiss");
                return;
            }else{
                $("#catName").css("border"," none");
                $('#addCategory').attr("data-dismiss", "modal");
            }

            if(catDescription == ''){
                $("#catDescription").css("border"," 1px solid red");
                $('#addCategory').removeAttr("data-dismiss");
                return;
        }else{
                $("#catDescription").css("border"," none");
                $('#addCategory').attr("data-dismiss", "modal");
            }

            createNewPageCat();

        })

